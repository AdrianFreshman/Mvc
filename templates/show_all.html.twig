{% extends 'base.html.twig' %}

{% block title %}All Books{% endblock %}

{% block body %}
    <h1>All Books</h1>

    <div class="navbar">
        <a href="{{ path('book_show_all') }}" class="nav-link">All Books</a>
        <a href="{{ path('book_create') }}" class="nav-link">Add Book</a>
        <a href="{{ path('library_reset') }}" class="nav-link">Reset Database</a>
    </div>

    <table>
        <tr>
            <th>Title(Click for details)</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        {% for book in books %}
            <tr>
                <td><a href="{{ path('book_show', {'id': book.id}) }}">{{ book.title }}</a></td>
                <td>{{ book.isbn }}</td>
                <td>{{ book.author }}</td>
                 <td><img src="{{ asset('img/' ~ book.image) }}" alt="{{ book.title }}"></td>
                <td>
                     <div>
                        <a href="{{ path('book_update', {'id': book.id}) }}">Update Book Details</a>
                    </div>
                    <div>
                        <a href="{{ path('book_delete', {'id': book.id}) }}">Delete</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}